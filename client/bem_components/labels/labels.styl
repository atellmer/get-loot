@import 'nib'

.labels-area .labels
	position relative
	width 100%
	height auto
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content center
	align-items center
	z-index 3
	
.labels-area .labels__item
	height 150px
	width 33.3333%
	background-color #454c52
	display flex
	flex-direction row
	flex-wrap nowrap
	justify-content center
	align-items center
	padding 20px
	@media screen and (max-width:768px)
		width 100%
		padding 10px
	
.labels-area .labels__item--active
	background-color #3b4147
	
.labels-area .shield
	background-position center
	background-repeat no-repeat
	background-size cover
	
.labels-area .shield--speed
	width 85px
	height 68px
	background-image url(./img/speed.png)
	
.labels-area .shield--protect
	width 56px
	height 63px
	background-image url(./img/protect.png)
	
.labels-area .shield--medal
	width 52px
	height 77px
	background-image url(./img/medal.png)
	
.labels-area .label-container
	height 100%
	display flex
	flex-direction row
	flex-wrap nowrap
	
.labels-area .label-container--shield
	width 40%
	justify-content center
	align-items center
		
.labels-area .label-container--text
	width 60%
	color #FFF
	justify-content flex-start
	align-items center
	padding 10px
	
.labels-area .labels__title
	text-transform uppercase
	font-size 1.8rem
	font-weight 900
	letter-spacing 1px
	@media screen and (max-width:992px)
		font-size 1.3rem
	
.labels-area .labels__subtitle
	font-size 1.6rem
	font-weight 300
	line-height 1
	margin 10px 0
	@media screen and (max-width:992px)
		font-size 1.2rem
	
	
	
	
	
	
	
	
	
	
	