@import 'nib'

.sub-categories
	position relative
	z-index 3
	width 100%
	height auto
	background-color #535358
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content flex-start
	align-items center
	
.sub-categories__item
	flex-grow 1
	color #FFF
	font-size 1.3rem
	font-weight 300
	letter-spacing 1px
	padding 10px 15px
	transition background-color .2s ease-in-out
	&:hover
		background-color #424246
	
.sub-categories__title
	flex-grow 0
	background-color #59c9ba
	font-weight 700
	text-transform uppercase
	&:hover
		background-color #59c9ba
	
.item-link
.item-link, 
.item-link:hover, 
.item-link:focus, 
.item-link:active
	text-decoration none
	
		
		
		
		
		
		
		
	