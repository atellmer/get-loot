@import 'nib'

.menu--mobile__btn
	width 30px
	height 30px
	position fixed
	top 10px
	left 10px
	z-index 99
	cursor pointer
	background-color #48c9b8
	user-select none
	
	
.hamburger-icon
	display inline-block
	width 15px
	height 2px
	background-color #FFF
	position absolute
	top 50%
	left 50%
	transition all .2s ease-in-out
	transform translate(-50%, -50%)
	transform-origin 4px -3px
	&::before, &::after
		content ''
		position absolute
		width 15px
		height 2px
		background-color #FFF
		transition all .2s ease-in-out
		transform-origin 50% 50%
		
	&::before	
		transform translateY(-5px)
		
	&::after	
		transform translateY(5px)
		
.is-open
	.hamburger-icon::before
		transform rotate(-45deg)
	.hamburger-icon::after
		transform rotate(45deg)
	.hamburger-icon
		transform rotate(90deg)
		background-color transparent
	
.menu--mobile__icon
	color #FFF
	position relative
	top 50%
	left 50%
	transform translate(-50%, -50%)
	
.menu--mobile__overlay
	display none
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	background-color #000
	z-index 97
	opacity .8
	
.menu--mobile__content
	position fixed
	top 0
	left 0
	transform translateX(-180px)
	width 180px
	height 100%
	z-index 98
	transition all .2s ease-in-out
	background-color #48c9b8
	overflow auto
	
.menu-list
	width 100%
	list-style-type none
	margin 0
	padding 0
	text-align left
	font-weight 300
	height 100%
	
.list__item
	padding 20px 10px 20px 20px
	width 100%
	cursor pointer
	color #FFF
	text-transform uppercase
	letter-spacing 1px
	font-size 1.2rem
	transition all .2s ease-in-out
	&:hover
		background-color #4DB6AC
			
.menu-divider
	width 100%
	height 1px
	border-top 1px solid #80CBC4
	
.menu-link--mobile, 
.menu-link--mobile:hover, 
.menu-link--mobile:focus, 
.menu-link--mobile:active
	text-decoration none
	
.menu-margin
	width 100%
	height 50px
	
.menu--mobile
	display none
	@media screen and (max-width:1170px)
		display block