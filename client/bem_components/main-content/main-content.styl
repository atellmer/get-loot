@import 'nib'

.main-content-area .main-content
	position relative
	width 100%
	height auto
	min-height 1000px
	padding 10px 10px 55px 10px
	background-color #FFF
	z-index 4
	
.main-content-area .card
	width 100%
	height auto
	background-position center
	background-repeat no-repeat
	background-size cover
	display flex
	flex-direction row
	flex-wrap nowrap
	justify-content center
	align-items center
	
.main-content-area .card--big
	height 360px
	@media screen and (max-width:600px)
		height 260px
		
.main-content-area .card--category
	height 230px
	@media screen and (max-width:600px)
		height 260px
		
.main-content-area .card--mini
	height 200px
	
.main-content-area .card-item
	margin 10px
	
.main-content-area .card__title
	color #FFF
	text-transform uppercase
	font-weight 900
	background-color #48c9b8
	padding 3px 10px
	letter-spacing 2px
	transition all .2s ease-in-out
		
.main-content-area .card__title--big
	font-size 2.5rem
	@media screen and (max-width:600px)
		font-size 1.8rem
		
.main-content-area .card__title--small
	font-size 1.7rem
	@media screen and (max-width:600px)
		font-size 1.8rem
	
.main-content-area .card__subtitle
	color #FFF
	background-color #444b51
	padding 3px 10px
	position relative
	line-height 0
		
.main-content-area .card__subtitle--big
	font-size 1.8rem
	top 6px
	@media screen and (max-width:600px)
		top 4px
		font-size 1.5rem
		
.main-content-area .card__subtitle--small
	font-size 1.4rem
	top 4px
	@media screen and (max-width:600px)
		top 1px
		font-size 1.2rem
		
.main-content-area .card__link, 
.main-content-area .card__link:hover, 
.main-content-area .card__link:focus, 
.main-content-area .card__link:active
	text-decoration none
	
.main-content-area .card-description
	margin 20px 0
	min-height 150px
	max-height 10rem
	overflow hidden
	
.main-content-area .card-description__title
	color #000
	text-align center
	text-transform uppercase
	font-size 1.5rem
	font-weight 900
	margin 5px 0
	
.main-content-area .card-description__row
	color #000
	text-align center
	font-size 1.4rem
	font-weight 300
	padding 20px
	
.main-content-area .card-price
	margin-top -15px
	line-height 0
	
.main-content-area .rub-symbol
	font-family 'PT Sans', serif
	
.main-content-area .content-divider
	width calc(100% - 20px)
	height 1px
	border-top 1px solid #e5e5e5
	margin 0 auto
	
.main-content-area .text-content__title
	text-align center
	text-transform uppercase
	font-size 2.8rem
	font-weight 900
	margin-bottom 20px
	@media screen and (max-width:600px)
		font-size 2rem
		margin 20px 0
	
.main-content-area .title-border
	border-bottom 1px solid #000
	letter-spacing 1px
	
.main-content-area .text-content
	padding 70px 60px
	@media screen and (max-width:600px)
		padding 10px
	
.main-content-area .text-content__description
	font-size 1.8rem
	font-weight 300
	@media screen and (max-width:600px)
		font-size 1.2rem

	
	
	
	
	
	
	
	