@import 'nib'

.main-content-area .main-content
	position relative
	width 100%
	height auto
	min-height 1000px
	padding 10px 10px 55px 10px
	background-color #FFF
	z-index 4
	
.main-content-area .card
	width 100%
	height auto
	background-position center
	background-repeat no-repeat
	background-size cover
	display flex
	flex-direction row
	flex-wrap nowrap
	justify-content center
	align-items center
	&:hover .card__title
		background-color #00897B
	
.main-content-area .card--big
	height 360px
	@media screen and (max-width:600px)
		height 260px
		
.main-content-area .card--category
	height 230px
	@media screen and (max-width:600px)
		height 260px
		
.main-content-area .card--mini
	height 200px
	
.main-content-area .card-item
	margin 10px
	
.main-content-area .card__title
	color #FFF
	text-transform uppercase
	font-weight 900
	background-color #48c9b8
	padding 3px 10px
	letter-spacing 2px
	transition all .2s ease-in-out
		
.main-content-area .card__title--big
	font-size 2.5rem
	@media screen and (max-width:600px)
		font-size 1.8rem
		
.main-content-area .card__title--small
	font-size 1.7rem
	@media screen and (max-width:600px)
		font-size 1.8rem
	
.main-content-area .card__subtitle
	color #FFF
	background-color #444b51
	padding 3px 10px
	position relative
	line-height 0
		
.main-content-area .card__subtitle--big
	font-size 1.8rem
	top 6px
	@media screen and (max-width:600px)
		top 4px
		font-size 1.5rem
		
.main-content-area .card__subtitle--small
	font-size 1.4rem
	top 4px
	@media screen and (max-width:600px)
		top 1px
		font-size 1.2rem
		
.main-content-area .card__link, 
.main-content-area .card__link:hover, 
.main-content-area .card__link:focus, 
.main-content-area .card__link:active
	text-decoration none
	
.main-content-area .card-description
	margin 20px 0
	min-height 150px
	max-height 10rem
	overflow hidden
	
.main-content-area .card-description__title
	color #000
	text-align center
	text-transform uppercase
	font-size 1.5rem
	font-weight 900
	margin 5px 0
	
.main-content-area .card-description__row
	color #000
	text-align center
	font-size 1.4rem
	font-weight 300
	padding 20px
	
.main-content-area .card-price
	line-height 0
	transform translateY(-22px)
	
.main-content-area .rub
	display inline-block
	line-height 5px
	border-bottom 1px solid #FFF
	width 0.4em

.main-content-area .content-divider
	width calc(100% - 20px)
	height 1px
	border-top 1px solid #e5e5e5
	margin 0 auto
	
.main-content-area .text-content__title
	text-align center
	text-transform uppercase
	font-size 2.8rem
	font-weight 900
	margin-bottom 20px
	@media screen and (max-width:600px)
		font-size 2rem
		margin 20px 0
	
.main-content-area .title-border
	border-bottom 1px solid #000
	letter-spacing 1px
	
.main-content-area .text-content
	padding 70px 60px
	@media screen and (max-width:600px)
		padding 10px
	
.main-content-area .text-content__description
	font-size 1.8rem
	font-weight 300
	@media screen and (max-width:600px)
		font-size 1.2rem
		
.main-content-area .product-description
	padding 0 40px
	@media screen and (max-width:600px)
		padding 10px!important
	
.main-content-area .card--product
	height 260px
	
.main-content-area .product-description__title
	font-size 1.8rem
	font-weight 900
	text-transform uppercase
	margin 30px 0 10px 0
	letter-spacing 1px
	
.product-description__text
	font-size 1.6rem
	font-weight 300
	@media screen and (max-width:600px)
		font-size 1.1rem
	
.product-description__link,
.product-description__link:hover,
.product-description__link:active,
.product-description__link:focus
	color #48c9b8
	text-decoration none
	
.list-circle
	display inline-block
	width 10px
	height 10px
	background-color #48c9b8
	border-radius 50%
	margin 0 15px
	
.product-description
	padding 0 40px
	
.product-description--left
	padding 0 20px 0 40px!important
	@media screen and (max-width:992px)
		padding 20px!important
	
.product-description--right
	padding 0 40px 0 20px!important
	@media screen and (max-width:992px)
		padding 20px!important
	
.product-description__price
	font-size 4rem
	font-weight 700
	color #48c9b8
	line-height 1
	text-align right
	@media screen and (max-width:992px)
		text-align center
	
.main-content-area .rub--big
	line-height 12px
	border-bottom 3px solid #48c9b8
	width 0.4em
	
.control-label
	text-transform uppercase
	font-weight 900 
	
.form-control--color:focus
	box-shadow none!important
	border-color #48c9b8!important
	
.circle-question
	display inline-block
	width 15px
	height 15px
	background-color #48c9b8
	border-radius 50%
	position relative
	top -3px
	cursor pointer
	
.circle-question__icon
	color #FFF
	position relative
	top -2px
	right 5px
	font-weight 400
	
.form-group--margin
	margin 30px 0
	
.discount__title
	text-transform uppercase
	font-weight 900 
	
.discount__percent
	font-size 2.2rem
	font-weight 500
	margin 0 15px
	
.clarification
	color #48c9b8
	font-size 1.4rem
	font-weight 900
	border-bottom 1px dashed #48c9b8
	text-transform uppercase
	cursor pointer
	line-height 2.5
	
.discount__text
	font-size 1.4rem
	font-weight 300
	margin 30px 0
	color #7c7c7c
	
.sum
	margin 20px 0
	
.sum__title
	text-transform uppercase
	font-weight 900
	
.sum__price--old
	display inline-block
	font-size 2.2rem
	margin 0 20px
	
.strike
	position relative
	top 17px
	display block
	height 2px
	width 100%
	border-top 2px solid #48c9b8
	
.sum__price--new
	font-size 3.7rem
	font-weight 700
	
.comment-box
	margin 20px 0
	
.comment-box__title
	text-transform uppercase
	font-weight 900
	
.comment-box__textarea
	width 100%
	height 170px
	resize none
	transition all .2s ease-in-out
	border 1px solid #ccc
	border-radius 5px
	padding 10px
	&:focus
		border 1px solid #48c9b8
		
.confirm
	margin 20px 0
	
.confirm__btn
	margin 10px 0
	background-image linear-gradient(180deg, #53d2c3, #3ec1ae)
	color #FFF
	text-transform uppercase
	font-size 2rem
	font-weight 900
	padding 15px 40px
	&:hover
		color #FFF
	&:focus
		color #FFF
	&:active
		color #FFF
	outline none
	text-shadow 0 0 2px #888
	letter-spacing 1px
	
.btn-area
	text-align right
	@media screen and (max-width:992px)
		text-align center
	
		
.confirm__title
	font-size 1.6rem
	font-weight 500
	margin 10px 0
	display block
	line-height 1
	

.checkbox-slider--b-flat input:checked + span::after
	margin-top 7px
	
.checkbox-slider--b-flat input + span::after
	margin 7px 0 0 0

	
	
	
	
	
	
	
	

	
	
	
	
	
	
	
	