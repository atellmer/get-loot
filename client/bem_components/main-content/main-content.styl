@import 'nib'

.main-content
	position relative
	width 100%
	height auto
	padding 10px 10px 55px 10px
	background-color #FFF
	z-index 4
	
.card
	width 100%
	height auto
	background-position center
	background-repeat no-repeat
	background-size cover
	display flex
	flex-direction row
	flex-wrap nowrap
	justify-content center
	align-items center
	
.card--big
	height 360px
	@media screen and (max-width:600px)
		height 260px
		
.card--mini
	height 200px
	
.card-item
	margin 10px
	
.card__title
	color #FFF
	text-transform uppercase
	font-weight 900
	background-color #48c9b8
	padding 3px 10px
	letter-spacing 2px
	transition all .2s ease-in-out
	&:hover
		background-color #009688
		
.card__title--big
	font-size 2.5rem
	@media screen and (max-width:600px)
		font-size 1.8rem
		
.card__title--small
	font-size 1.7rem
	@media screen and (max-width:600px)
		font-size 1.8rem
	
.card__subtitle
	color #FFF
	background-color #444b51
	padding 3px 10px
	position relative
	line-height 0
		
.card__subtitle--big
	font-size 1.8rem
	top 6px
	@media screen and (max-width:600px)
		top 4px
		font-size 1.5rem
		
.card__subtitle--small
	font-size 1.4rem
	top 4px
	@media screen and (max-width:600px)
		top 1px
		font-size 1.2rem
		
.card__link, .card__link:hover, .card__link:focus, .card__link:active
	text-decoration none
	
	
	
	
	
	
	
	
	