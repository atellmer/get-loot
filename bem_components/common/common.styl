@import 'nib'

$bg-color = #FFF;

.no-padding
	padding 0!important
	margin 0!important
	
.flex
	display flex
	flex-direction row
	flex-wrap nowrap
	justify-content center
	align-items center
	
.paper-shadow-z1
	box-shadow 0 1px 6px rgba(0,0,0,0.12), 0 1px 4px rgba(0,0,0,0.12)!important
	
.paper-shadow-z2
	box-shadow 0 3px 10px rgba(0,0,0,0.16), 0 3px 10px rgba(0,0,0,0.23)!important
	
.paper-shadow-z3
	box-shadow 0 10px 30px rgba(0,0,0,0.19), 0 6px 10px rgba(0,0,0,0.23)!important
	
.paper-shadow-z4
	box-shadow 0 14px 45px rgba(0,0,0,0.25), 0 10px 18px rgba(0,0,0,0.22)!important
	
.paper-shadow-z5
	box-shadow 0 19px 60px rgba(0,0,0,0.3), 0 15px 20px rgba(0,0,0,0.22)!important
	
.hide--mobile
	display block
	@media screen and (max-width:992px)
		display none
		
.show--mobile
	display none
	@media screen and (max-width:992px)
		display block
	
::selection
	background #80CBC4
	
::-moz-selection
	background #80CBC4

body
	background $bg-color
	font-smoothing antialiased
	overflow-scrolling touch
	font-family 'MyseoSansCyrl'

a, a:hover, a:active, a:focus
	outline none
	color #FFF
	text-decoration underline

.container-fluid
	background $bg-color
	padding 0
	width 100%
	height auto
	margin-top -1px
	
.content
	position relative
	width 100%
	max-width 1170px
	height auto
	margin 0 auto
	padding 25px
	z-index 1
	
.header__bg
	position absolute
	z-index 0
	width 100%
	height 800px
	background-image url(./img/header-bg.png)
	background-position center
	background-repeat no-repeat
	background-size cover
	
.footer__bg
	position relative
	z-index 0
	margin-top -600px
	width 100%
	height 600px
	background-image url(./img/footer-bg.png)
	background-position center
	background-repeat no-repeat
	background-size cover
	@media screen and (max-width:992px)
		margin-top -1200px
		height 1200px
		

	
	
